<% title 'Log ind' %>

<%= semantic_form_for resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => "no-headline" } do |f| %>
  <%= f.inputs do %>
    <%= f.input :email %>
    <%= f.input :password, :as => :password %>

    <% if devise_mapping.rememberable? -%>
      <%= f.input :remember_me, :as => :boolean %>
    <% end -%>

    <%= f.buttons do %>
      <%= f.commit_button "Log ind" %>
    <% end %>
  <% end %>
<% end %>

<%= render :partial => "devise/shared/links" %>