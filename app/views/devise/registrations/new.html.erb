<% title 'Opret ny bruger' %>

<%= semantic_form_for resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => "no-headline" } do |f| %>
  <%= f.inputs do %>
    <%= devise_error_messages! %>
    <%= f.input :email %>
    <%= f.input :password, :as => :password %>
    <%= f.input :password_confirmation, :as => :password, :required => true %>
    <%= f.buttons do %>
      <%= f.commit_button :create %>
    <% end %>
  <% end %>
<% end %>

<%= render :partial => "devise/shared/links" %>
