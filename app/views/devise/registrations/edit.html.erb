<% title 'Rediger din profil' %>

<%= semantic_form_for resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :class => "no-headline" } do |f| %>
  <%= f.inputs do %>
    <%= devise_error_messages! %>
    <%= f.input :email %>
    <%= f.input :password, :as => :password, :hint => "Undlad at udfylde hvis du ikke vil ændre det" %>
    <%= f.input :password_confirmation, :as => :password %>
    <%= f.input :byggeweb_username %>
    <%= f.input :byggeweb_password, :as => :password %>
    <%= f.input :current_password, :as => :password, :hint => "Vi har brug for dit nuværende password for godkende dine ændringer", :required => true %>
    <%= f.buttons %>
  <% end %>
<% end %>

<h3>Annuller min konto</h3>

<p>Utilfreds? <%= link_to "Annuller min konto", registration_path(resource_name), :confirm => "Er du sikker?", :method => :delete %>.</p>
