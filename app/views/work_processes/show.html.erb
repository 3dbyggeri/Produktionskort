<% title h("Produktionskort") %>
<div id="left">
<div id="stemdata">
  <h2><%=h @work_process.activity %></h2>
  <ul>
    <li><%=h @work_process.project.title_number %> <%=h @work_process.project.name %></li>
    <li><%=h @work_process.project.address %></li>
    <% for person in @work_process.project.people do %>
    <li><%=h person.kind %>: <%=h person.name %> - <%=h person.mobile_tel %></li>
    <%- end -%>
  </ul>
</div>
<div id="site" class="info_box">
  <h2>Byggeplads</h2>
  <%= render 'group_referrals', :ref_arr => @work_process.project.site_referrals %>

  <h3>Bemærkninger:</h3>
  <ul>
    <% for focus in @work_process.project.site_focuses do %>
    <li><%=h focus.description %> (<%=h focus.kind %>)</li>
    <%- end -%>
    <% for operation in @work_process.project.site_operations do %>
    <li><%=h operation.description %> (<%=h operation.kind %>)</li>
    <%- end -%>
  </ul>
</div>
<div id="planning" class="info_box">
  <h2>Planlægning og opfølgning</h2>
  <dl>
    <dt>Planlagt start</dt><dd><%=h @work_process.planned_start.to_s(:short) %></dd>
    <dt>Planlagt slut</dt><dd><%=h @work_process.planned_end.to_s(:short) %></dd>
    <dt>Forudgående</dt><dd><%=h @work_process.preceding %></dd>
    <dt>Efterfølgende</dt><dd><%=h @work_process.subsequent %></dd>
  </dl>
  <%= render 'group_referrals', :ref_arr => @work_process.project.planning_referrals %>
  
</div>
<div id="staff" class="info_box">
  <h2>Mandskab</h2>
  
  <dl>
    <% unless @work_process.social_responsibility.blank? %><dt>Socialt ansvar</dt><dd><%=h @work_process.social_responsibility %></dd><% end %>
    <% unless @work_process.piecework_rate.blank? %><dt>Akkord</dt><dd><%=h @work_process.piecework_rate %></dd><% end %>
    <% unless @work_process.hourly_rate.blank? %><dt>Timeløn</dt><dd><%=h @work_process.hourly_rate %></dd><% end %>
    <dt>Bonus</dt><dd><%=h @work_process.bonus ? "Ja" : "Nej" %></dd>
    <dt>Incitamentaftale</dt><dd><%=h @work_process.incentive_deal ? "Ja" : "Nej" %></dd>
    <% unless @work_process.allowance.blank? %><dt>Godtgørelse</dt><dd><%=h @work_process.allowance %></dd><% end %>
    <% unless @work_process.time_of_day.blank? %><dt>Tid på dagen</dt><dd><%=h @work_process.time_of_day %></dd><% end %>
    <dt>Ekstra arbejde</dt><dd><%= @work_process.extra_work ? "Ja" : "Nej" %></dd>
  </dl>
  <%= render 'group_referrals', :ref_arr => @work_process.crew_referrals %>

  <h3>Kompetencer</h3>
  <ul>
  <% for qualification in @work_process.qualifications do %>
  <li><%= "#{h qualification.kind}:" %><%= " #{h qualification.notes}" unless qualification.notes.blank? %><%= " (Immatriel møntfod #{h qualification.immaterial_currency})" unless qualification.immaterial_currency.blank? %></li>
  <%- end -%>
  </ul>
</div>
</div>

<div id="right">
<div id="assembly_directions" class="info_box">
  <h2>Montage</h2>
  <dl>
    <dt>Placering</dt><dd><%=h @work_process.location %></dd>
    <dt>Levering senest</dt><dd><%=h @work_process.project_delivery_time.to_s(:short) %></dd>
    <dt>Ansvarlig</dt><dd><%=h @work_process.project_delivery_person %></dd>
  </dl>
  
  <%= render 'group_referrals', :ref_arr => @work_process.activity_referrals %>

  <h3>Krav</h3>
  <ul>
  <% for requirement in @work_process.requirements do %>
  <li><%=h requirement.kind %><%= " #{h requirement.component}:" unless requirement.component.blank? %><%= " #{h requirement.description}" unless requirement.description.blank? %></li>
  <%- end -%>
  </ul>

  <h3>Værnemidler</h3>
  <ul>
  <% for protection in @work_process.protections do %>
  <li><%= "#{h protection.kind}:" %><%= " #{h protection.notes}" unless protection.notes.blank? %><%= " #{h protection.usage}" unless protection.usage.blank? %></li>
  <%- end -%>
  </ul>

</div>
<div id="materials" class="info_box">
  <h2>Materialer</h2>
  <% for material_package in @work_process.material_packages do %>
  <h3>Materialepakke, unitnr.: <%=h material_package.unit_number %></h3>
    <table>
      <thead>
        <tr>
          <th>Type</th>
          <th>Antal</th>
          <th>Vægt</th>
          <th>Mål</th>
          <th>Længde</th>
        </tr>
      </thead>
      <tbody>
    <% for material in material_package.materials do %>
        <tr><td><%=h material.kind %></td><td class="right"><%=h material.count %></td><td class="right"><%=h material.weight %></td><td class="right"><%=h material.measures %> <%=h material.unit %></td><td class="right"><%=h material.lengths %> <%=h material.unit %></td></tr>
    <%- end -%>
      </tbody>
    </table>
  <%- end -%>
  
  <%= render 'group_referrals', :ref_arr => @work_process.material_referrals %>
</div>
<div id="equipment" class="info_box">
  <h2>Materiel</h2>
  <%= render 'group_referrals', :ref_arr => @work_process.equipment_referrals %>

  <h3>Process specifikt materiel</h3>
  <ul>
  <% for equipment in @work_process.equipment do %>
  <li><%= "#{h equipment.kind}:" %><%= " #{h equipment.notes}" unless equipment.notes.blank? %></li>
  <%- end -%>
  </ul>

  
</div>
</div>
<div class="clear"> </div>