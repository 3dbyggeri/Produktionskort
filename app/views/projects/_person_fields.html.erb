<%= f.inputs :class => "tableize inputs" do %>
  <%= f.input :kind, :collection => Person::KINDS, :include_blank => false %>
  <%= f.input :name %>
  <%= f.input :street_address %>
  <%= f.input :extended_address %>
  <%= f.input :postal_code, :input_html => { :size => 5 }, :wrapper_html => { :class => 'col1' } %>
  <%= f.input :city, :input_html => { :size => 30 }, :wrapper_html => { :class => 'col2' } %>
  <%= f.input :tel %>
  <%= f.input :direct_tel %>
  <%= f.input :mobile_tel %>
  <%= f.input :email %>
  <%= f.input :url %>
  <%= link_to_remove_fields "Slet", f %>
<% end %>